<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="topnav">
        @Ajax.ActionLink("Notes", "Notes", "Home", new AjaxOptions { UpdateTargetId = "formsContainer" })

        <div class="topnav-right" id="loginPanel">
            @Ajax.ActionLink("Register", "Register", "Home", new AjaxOptions { UpdateTargetId = "formsContainer" })
            @Ajax.ActionLink("Login", "Login", "Home", new AjaxOptions { UpdateTargetId = "formsContainer" })
        </div>
        <!-- User name and logout button -->
        <ul class="topnav-right" id="loginSuccessPanel" style="display: none;">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">
                    Hello, <span id="userName"></span>! <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-content" id="logOut">Logout</a></li>
                </ul>
            </li>
            
        </ul>
    </div>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/momentjs")
    @Scripts.Render("~/bundles/momentjswithlocales")
    @Scripts.Render("~/scripts/jquery-3.3.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @RenderSection("scripts", required: false)
</body>
</html>
