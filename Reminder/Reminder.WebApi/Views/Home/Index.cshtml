<!-- Alerts -->
@Html.ActionLink("Login", "Login")

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var tokenKey = "tokenInfo";

            // Logout
            $("#logOut").click(function(e) {
                e.preventDefault();
                $("#loginSuccessPanel").css("display", "none");
                $("#userName").html("");
                sessionStorage.removeItem(tokenKey);
            });
        });
    </script>
}